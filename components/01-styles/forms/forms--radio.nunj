{% if disabled -%}
  <div class="form-radio">
    <input type="radio" id="{{text}}" name="{{group}}" disabled="disabled">
    <label for="{{text}}">{{text}}</label>
  </div>
{% else %}
  <div class="form-radio">
    <input type="radio" id="{{text}}" name="{{group}}">
    <label for="{{text}}">{{text}}</label>
  </div>
{% endif -%}
